        <item name="windowSplashScreenAnimatedIcon">@drawable/happy_places_splash_logo</item> <!-- MODIFIED HERE -->
        <!-- <item name="windowSplashScreenAnimationDuration">1000</item> --> <!-- Optional: for animated icons -->

        <!-- Set the theme of the Activity that follows your splash screen. -->
        <!-- This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.HappyPlaces</item>
    </style>

